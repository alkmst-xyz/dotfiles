{
  "workbench.startupEditor": "none",
  "window.menuBarVisibility": "toggle",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.rulers": [79],
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontSize": 14,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "clangd.arguments": ["--compile-commands-dir=build/debug"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "docker.dockerPath": "podman",
  // "remote.containers.dockerPath": "podman",
  "mesonbuild.buildFolder": "build",
  "mesonbuild.configureOnOpen": false,
  // "[nunjucks]": {
  //   "editor.defaultFormatter": "okitavera.vscode-nunjucks-formatter"
  // },
  "html.suggest.html5": true,
  "emmet.includeLanguages": {
    "njk": "html",
    "nunjucks": "html"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.html": "html"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.formatting.provider": "black",
  "jupyter.askForKernelRestart": false,
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.svelte.note-new-transformation": false,
  "workbench.iconTheme": "material-icon-theme",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "vim.useCtrlKeys": false,
  "editor.inlineSuggest.showToolbar": "always",
  "git.openRepositoryInParentFolders": "never",
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option"
  },
  "[bibtex]": {
    "editor.defaultFormatter": "jrbentzon.bibtex-formatter"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "Wistful"
}
